<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="instanceA" class="com.able.circulardependecies.InstanceA" autowire="byName">
		<property name="instanceB" ref="instanceB"></property>
	</bean>
	<bean id="instanceB" class="com.able.circulardependecies.InstanceB">
		<property name="instanceA" ref="instanceA"/>
	</bean>
</beans>